# ============================================================================
# КОНФИГУРАЦИЯ IHearYou BOT PROJEKT
# ============================================================================
# 
# ИНСТРУКЦИЯ:
# 1. Скопируйте этот файл в .env: cp .env.example .env
# 2. Получите BOT_TOKEN у @BotFather в Telegram
# 3. Установите BOT_TOKEN в .env файле
# 4. Запустите: make setup
# 
# ============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ============================================================================

# База данных
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/ihearyou
POSTGRES_PASSWORD=postgres
POSTGRES_USER=postgres
POSTGRES_DB=ihearyou

# Логирование
LOG_LEVEL=INFO

# ============================================================================
# БЕЗОПАСНОСТЬ И АУТЕНТИФИКАЦИЯ
# ============================================================================

# JWT настройки
JWT_SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Администратор по умолчанию (создается при первом запуске)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin12345
ADMIN_EMAIL=admin@yourcompany.com

# Admin секретные ключи (для Docker Compose)
ADMIN_SECRET_KEY=your_very_secret_admin_key_change_in_production

# ============================================================================
# EMAIL ФУНКЦИОНАЛЬНОСТЬ
# ============================================================================

# Email настройки (SMTP конфигурация)
MAIL_USERNAME=noreply@yourcompany.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@yourcompany.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=true
MAIL_SSL=false

# Email валидация (критично для входов, False - только для разработки)
EMAIL_DNS_CHECK=false

# Frontend URL для восстановления паролей
FRONTEND_URL=http://localhost:3000

# ============================================================================
# TELEGRAM BOT ИНТЕГРАЦИЯ
# ============================================================================

# Bot токен (ОБЯЗАТЕЛЬНО для бота) - получите у @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# API настройки для бота
API_BASE_URL=http://bot_api:8000
API_TIMEOUT=30
API_MAX_RETRIES=3

# Webhook настройки (для продакшена)
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_SECRET=your_secret_webhook_token

# Настройки напоминаний
INACTIVE_DAYS_THRESHOLD=10
REMINDER_COOLDOWN_DAYS=10

# API порт бэкенда (должен совпадать с BOT_API_PORT)
BOT_API_PORT=8001

# Redis (для кэширования и состояний)
REDIS_URL=redis://redis:6379/0

# Окружение
ENVIRONMENT=development
DEBUG=false

# ============================================================================
# FRONTEND И ДОКЕР КОНФИГУРАЦИЯ
# ============================================================================

# Frontend настройки (используется Docker Compose)
FRONTEND_API_URL=http://localhost:8001/api
FRONTEND_PORT=3001

