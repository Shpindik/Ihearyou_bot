{
    // Автосохранение
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.autoSaveWhenNoErrors": true,
    // Автоформатирование при сохранении
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    // Настройки для Python файлов
    "[python]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.rulers": [
            120
        ],
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 500
    },
    // Настройки для JSON файлов
    "[json]": {
        "editor.formatOnSave": true
    },
    // Настройки для YAML файлов
    "[yaml]": {
        "editor.formatOnSave": true
    },
    // Исключения из автоформатирования
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/venv": true,
        "**/.venv": true,
        "**/node_modules": true
    },
    // Настройки терминала
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/backend"
    },
    // Дополнительные настройки автосохранения
    "files.hotExit": "onExitAndWindowClose",
    "files.saveConflictResolution": "overwriteFileOnDisk",
    "editor.saveOnFocusLost": true,
    "editor.saveOnBlur": true
}
