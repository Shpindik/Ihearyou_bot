# ============================================================================
# ТЕСТОВЫЕ НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ============================================================================

# База данных (для тестов используется pytest-postgresql)
DATABASE_URL=postgresql+asyncpg://test:test@localhost/testdb
POSTGRES_PASSWORD=test
POSTGRES_USER=test
POSTGRES_DB=testdb

# Логирование
LOG_LEVEL=DEBUG

# ============================================================================
# БЕЗОПАСНОСТЬ И АУТЕНТИФИКАЦИЯ (ТЕСТОВЫЕ СЕКРЕТЫ)
# ============================================================================

# JWT настройки (ТЕСТОВЫЕ СЕКРЕТЫ - НЕ ИСПОЛЬЗОВАТЬ В ПРОДАКШЕНЕ!)
JWT_SECRET_KEY=test_secret_key_for_testing_only_do_not_use_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Администратор по умолчанию (для тестов)
ADMIN_USERNAME=testadmin
ADMIN_PASSWORD=testpassword123
ADMIN_EMAIL=testadmin@example.com

# Admin секретные ключи (для тестов)
ADMIN_SECRET_KEY=test_admin_key_for_testing_only

# ============================================================================
# EMAIL ФУНКЦИОНАЛЬНОСТЬ (ТЕСТОВЫЕ НАСТРОЙКИ)
# ============================================================================

# Email настройки (тестовые)
MAIL_USERNAME=test@example.com
MAIL_PASSWORD=test_password_change_me
MAIL_FROM=test@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.test.com
MAIL_TLS=true
MAIL_SSL=false

# Email валидация (отключена для тестов)
EMAIL_DNS_CHECK=false

# Frontend URL для восстановления паролей (тестовый)
FRONTEND_URL=http://localhost:3000

# ============================================================================
# TELEGRAM BOT ИНТЕГРАЦИЯ (ТЕСТОВЫЕ НАСТРОЙКИ)
# ============================================================================

# Bot токен (ТЕСТОВЫЙ - НЕ РЕАЛЬНЫЙ!)
BOT_TOKEN=1234567890:TEST_BOT_TOKEN_FOR_TESTING_ONLY
BOT_API_PORT=8001

# API настройки для бота (тестовые)
API_BASE_URL=http://localhost:8000
API_TIMEOUT=30
API_MAX_RETRIES=3

# Webhook настройки (пустые для тестов)
WEBHOOK_URL=
WEBHOOK_SECRET=

# Настройки напоминаний
INACTIVE_DAYS_THRESHOLD=10
REMINDER_COOLDOWN_DAYS=10

# Redis (тестовый)
REDIS_URL=redis://localhost:6379/1

# Окружение
ENVIRONMENT=testing
DEBUG=true

# ============================================================================
# FRONTEND И ДОКЕР КОНФИГУРАЦИЯ (ТЕСТОВЫЕ)
# ============================================================================

# Frontend настройки (тестовые)
FRONTEND_API_URL=http://localhost:8001/api
FRONTEND_PORT=3001
